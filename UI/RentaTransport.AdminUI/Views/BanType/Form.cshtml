@model RentaTransport.AdminUI.Models.BanTypeViewModel

<div class="card">
    <div class="card-body">
        <form asp-controller="BanType" asp-action="Save"
              data-ajax="true" data-ajax-method="post" data-ajax-success="OnSuccess"
              data-ajax-failure="OnFailure" data-ajax-begin="OnLoading">

            @Html.AntiForgeryToken()
            <input asp-for="Id" type="hidden" />
            <input asp-for="Status" type="hidden" />

            <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input type="text" asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex justify-content-start align-items-center">
                <partial name="TemplatePartials/_FormButtonsPartial" />
            </div>
        </form>
    </div>
</div>

@section scripts{
        <script>
        function OnSuccess(data) {
            if (data.IsSucceed)
                location.href = '@Url.Action("Index", "BanType")';
            else {
                var result = data.FailureResult.join(', ');
                alert(result);
            }
        }
        </script>

}
